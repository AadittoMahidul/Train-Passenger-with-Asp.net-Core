@model Ticket


<form id="f" name="f" data-db-type="ticket" data-db-action="edit" data-controller-action="EditTicket">
    <input type="hidden" asp-for="Category" value="@Category.Shulov" />
    <input type="hidden" asp-for="TicketId" />
    <div class="form-group row mb-1">
        <label asp-for="TrainId" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <select asp-for="TrainId" class="form-select form-select-sm" asp-items="@(new SelectList(ViewData["Trains"] as IEnumerable<Train>, "TrainId", "TrainName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="TrainId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="JourneyDate" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input type="text" asp-for="JourneyDate" class="form-control form-control-sm date">
            <span asp-validation-for="JourneyDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="IsAvailable" class="control-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsAvailable" checked>
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Price" class="control-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>


</form>
