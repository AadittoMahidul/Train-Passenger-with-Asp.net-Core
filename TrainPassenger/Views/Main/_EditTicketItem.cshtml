@model TicketItem

<form id="f" name="f" data-db-type="ticketitem" data-db-action="edit" data-controller-action="EditTicketItem">
    <input type="hidden" asp-for="TicketId" />
    @*<input type="hidden" asp-for="TicketId" />*@
    <div class="form-group row mb-1">
        <label asp-for="TicketId" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            @ViewData["TicketId"]
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="PassengerId" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-4">
            <select asp-for="PassengerId" class="form-select form-select-sm added" asp-items="@(new SelectList(ViewData["Passengers"] as IEnumerable<Passenger>, "PassengerId", "PassengerName"))">
                <option value="" selected>Select one</option>
            </select>
            <span asp-validation-for="PassengerId" class="text-danger"></span>
        </div>
        <label asp-for="Quantity" class="col-form-label col-form-label-sm col-2"></label>
        <div class="col-3">
            <input type="number" min="1" asp-for="Quantity" class="form-control form-control-sm added">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="col-1">
            @*<button type="button" class="btn btn-sm delti-insert"><i class="bi bi-trash"></i></button>*@
        </div>
    </div>
</form>
